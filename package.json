{
  "name": "informatif",
  "version": "1.0.0",
  "description": "Glanceable headlines for the media sources you care about.",
  "main": "index.js",
  "scripts": {
    "pre-commit": "lint-staged",
    "lint": "prettier --write '**/*.{tsx,ts,css,md}'",
    "prepare": "husky install",
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:website\"",
    "dev:api": "cd api && npm run dev",
    "dev:website": "cd website && npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zwliew/informatif.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zwliew/informatif/issues"
  },
  "homepage": "https://github.com/zwliew/informatif#readme",
  "devDependencies": {
    "concurrently": "^6.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx,css,md}": "prettier --write"
  }
}
